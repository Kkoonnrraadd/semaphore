# Semaphore Database Configuration
SEMAPHORE_DB_USER=semaphoreuser
SEMAPHORE_DB_PASS=changeme_use_strong_password
SEMAPHORE_DB_NAME=semaphore

# Semaphore Security Keys
# Generate these with: openssl rand 32 | base64
SEMAPHORE_ACCESS_KEY_ENCRYPTION=generate_with_openssl_rand_32_base64
SEMAPHORE_COOKIE_HASH=generate_with_openssl_rand_32_base64
SEMAPHORE_COOKIE_ENCRYPTION=generate_with_openssl_rand_32_base64

# Semaphore API Token (for scripts)
# Get this from Semaphore UI: User Settings -> API Tokens
SEMAPHORE_API_TOKEN=your_api_token_here

# Semaphore URL
SEMAPHORE_URL=http://localhost:3000

# Azure Configuration (optional, for scripts)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_SUBSCRIPTION_ID=
